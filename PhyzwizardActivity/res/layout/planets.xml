<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    		android:orientation="vertical"
    		android:layout_width="match_parent"
    		android:layout_height="match_parent"
    		android:gravity="center_vertical">
    		<LinearLayout
    		android:orientation="horizontal"
    		android:layout_width="match_parent"
    		android:layout_height="match_parent"
    		android:layout_weight="50"
    		android:gravity="center_vertical"
    		>

			<Button android:id="@+id/bEarth"
	    		android:layout_weight="50"
	    		android:layout_height="match_parent"
        		android:layout_width="0dp"
	    		android:padding="5dp"
	    		android:background="@drawable/earth"
	    		android:text="@string/btn_earth" />

			<Button
	    		android:id="@+id/bMoon"
	    		android:layout_height="match_parent"
        		android:layout_width="0dp"
       		    android:layout_weight="50"
	    		android:padding="5dp"
	    		android:background="@drawable/moon"
	    		android:text="@string/btn_moon" />
	    	</LinearLayout>
    		<LinearLayout
    		android:orientation="horizontal"
    		android:layout_weight="50"
    		android:layout_width="match_parent"
    		android:layout_height="match_parent"    		
    		android:gravity="center_vertical"
    		>
	    	 <Button
	 		   android:id="@+id/bSaturn"
	 		   android:layout_weight="50"
	 		   android:layout_height="match_parent"
        	   android:layout_width="0dp"       		    
			   android:padding="5dp"
			   android:background="@drawable/saturn"
	 		   android:text="@string/btn_saturn" />
	   
			 <Button
	    	   android:id="@+id/bMars"
	    	   android:layout_height="match_parent"
        	   android:layout_width="0dp"
       		   android:layout_weight="50"
	     	   android:padding="5dp"
	     	   android:background="@drawable/mars"
	    	   android:text="@string/btn_mars" />
	    	   </LinearLayout>	       
	
</LinearLayout>